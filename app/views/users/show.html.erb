<div class="container mt-5 w-50">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if @user %>
        <div class="card border-dark shadow" style="width:350px">
          <img src="<%= @user[:picture] %>" class="card-img-top" alt="Profile Picture">
          <div class="card-body">
            <h5 class="card-title text-primary text-center"><%= "#{@user[:first_name]} #{@user[:last_name]}" %></h5><hr/>
            <p class="card-text"><strong>Email:</strong> <%= @user[:email] %></p>
            <p class="card-text"><strong>Gender:</strong> <%= @user[:gender] %></p>
            <p class="card-text"><strong>Location:</strong> <%= "#{@user[:city]}, #{@user[:country]}" %></p>
          </div>
        </div>
      <% else %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
  </div>
</div>
